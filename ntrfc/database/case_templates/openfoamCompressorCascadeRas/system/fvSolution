FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{


//Druck Dichte
    "(p|rho)"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-12;
        relTol          0.005;
    }

    "(p|rho)Final"
    {
        $p;
        relTol          0;
    }

    "(U|k|e|nuTilda)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-10;
        relTol          0.01;
    }

    "(U|k|nuTilda|e|omega)Final"
    {
        $U;
        relTol          0;
    }

    pcorr
    {
        solver	GAMG;
        smoother          GaussSeidel;
        tolerance 1e-08;
	    relTol	0.0;
    }
}


PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors <var NOUTERCORRECTORS var>;  // 1;	1=PISO 1<PIMPLE
    nCorrectors      <var NCORRECTORS var>; // 1;	//outer loops
    nNonOrthogonalCorrectors <var NNONORTHOGONALCORRECTORS var>;	//p loops
    rhoMin          0.2;
    rhoMax          3;
    transonic	no;
}

potentialFlow
{
    nNonOrthogonalCorrectors 10;
}

relaxationFactors
{
    fields
    {
    }
    equations
    {
        ".*"  1;
    }
}



