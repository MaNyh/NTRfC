FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform <PARAM temperature_inlet PARAM>;

Tinlet          <PARAM temperature_inlet PARAM>;

boundaryField
{
    INLET
    {
        type            fixedValue;
        value           uniform $Tinlet;
    }
    OUTLET
    {
        type            inletOutlet;
        value           uniform $Tinlet;
	    inletValue	    uniform $Tinlet;
	    fieldInf        uniform $Tinlet;
        lInf            0.01;
    }
    BLADE
    {
        type            zeroGradient;
    }

    Z_lower
    {
        type            cyclic;
    }

    Z_upper
    {
        type            cyclic;
    }

    Y_lower
    {
        type            cyclic;
    }

    Y_upper
    {
        type            cyclic;
    }

}


// ************************************************************************* //
