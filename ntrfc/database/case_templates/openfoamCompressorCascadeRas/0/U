FoamFile
{
    version     2.0;
    format	    ascii;
    class	    volVectorField;
    location    "0";
    object	    U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //



dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (<PARAM velocity_inlet PARAM>);


boundaryField
{
    INLET
    {
        type            waveTransmissive;
	    gamma		    1.4;
        value           uniform (<PARAM velocity_inlet PARAM>);
	    fieldInf	    <PARAM velocity_inlet PARAM>;
    }

    OUTLET
    {
        type            waveTransmissive;
	    gamma		    1.4;
        value           uniform (<PARAM velocity_inlet PARAM>); //startwert only
	    inletValue	    uniform (0 0 0);
    }

    BLADE
    {
     	type            noSlip;
    }

    Z_lower
    {
        type            cyclic;
    }

    Z_upper
    {
        type            cyclic;
    }

    Y_lower
    {
        type            cyclic;
    }

    Y_upper
    {
        type            cyclic;
    }

}


// ************************************************************************* //
