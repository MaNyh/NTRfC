FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// This application/dictionary controls:
// - optional: create new patches from boundary faces (either given as
//   a set of patches or as a faceSet)
// - always: order faces on coupled patches such that they are opposite. This
//   is done for all coupled faces, not just for any patches created.
// - optional: synchronise points on coupled patches.
// - always: remove zero-sized (non-coupled) patches (that were not added)

// 1. Create cyclic:
// - specify where the faces should come from
// - specify the type of cyclic. If a rotational specify the rotationAxis
//   and centre to make matching easier
// - always create both halves in one invocation with correct 'neighbourPatch'
//   setting.
// - optionally pointSync true to guarantee points to line up.

// 2. Correct incorrect cyclic:
// This will usually fail upon loading:
//  "face 0 area does not match neighbour 2 by 0.0100005%"
//  " -- possible face ordering problem."
// - in polyMesh/boundary file:
//      - loosen matchTolerance of all cyclics to get case to load
//      - or change patch type from 'cyclic' to 'patch'
//        and regenerate cyclic as above

// Do a synchronisation of coupled points after creation of any patches.
// Note: this does not work with points that are on multiple coupled patches
//       with transformations (i.e. cyclics).
pointSync false;

// Patches to create.
patches
(


// ************************************************************************* //
// ******************************RENAME PATCHES***************************** //
// ************************************************************************* //

    {
        // Name of new patch
        name Z_lower;

        // Dictionary to construct new patch from
        patchInfo
        {
            type cyclic;
            neighbourPatch Z_upper;

            transform translational;
            separationVector (0 0 <OPTION zspan OPTION>);
            matchTolerance 0.02;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup15 FaceGroup22 FaceGroup28 FaceGroup34 FaceGroup40
		 FaceGroup46 FaceGroup52 FaceGroup58 FaceGroup63 FaceGroup69
		 FaceGroup75 FaceGroup79);

    }

    {
        // Name of new patch
        name Z_upper;

        // Dictionary to construct new patch from
        patchInfo
        {
            type cyclic;
            neighbourPatch Z_lower;

            transform translational;
            separationVector (0 0 -<OPTION zspan OPTION>);
            matchTolerance 0.1;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup16 FaceGroup23 FaceGroup29 FaceGroup35 FaceGroup41
                 FaceGroup47 FaceGroup53 FaceGroup59 FaceGroup64 FaceGroup70
                 FaceGroup76 FaceGroup80);

    }

    {
        // Name of new patch
        name Y_lower;

        // Dictionary to construct new patch from
        patchInfo
        {
            type cyclic;
            neighbourPatch Y_upper;

            transform translational;
            separationVector (0 <PARAM pitch PARAM> 0);
            matchTolerance 0.1;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup17 FaceGroup36 FaceGroup42);
    }
   {
        // Name of new patch
        name Y_upper;

        // Dictionary to construct new patch from
        patchInfo
        {
            type cyclic;
            neighbourPatch Y_lower;

            transform translational;
            separationVector (0 -<PARAM pitch PARAM> 0);
            matchTolerance 0.02;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup30 FaceGroup54 FaceGroup61);
    }

   {
        // Name of new patch
        name BLADE;

        // Dictionary to construct new patch from
        patchInfo
        {
            type wall;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup67 FaceGroup71 FaceGroup77 FaceGroup81);
    }
   {
        // Name of new patch
        name INLET;

        // Dictionary to construct new patch from
        patchInfo
        {
            type patch;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup19 FaceGroup25 FaceGroup31);
    }
   {
        // Name of new patch
        name OUTLET;

        // Dictionary to construct new patch from
        patchInfo
        {
            type patch;
        }

        // How to construct: either from 'patches' or 'set'
        constructFrom patches;

        // If constructFrom = patches : names of patches. Wildcards allowed.
        patches (FaceGroup44 FaceGroup50 FaceGroup56);
    }

);

